<% layout("/layouts/boilerplate") %>
<body>

    <h2>Create the New Listing</h2>
    <form action="/listings" method="POST">
        <input type="text" name="listing[title]" placeholder="Enter title">
        <br> <br>
        <textarea type="text" name="listing[description]" placeholder="enter the description"></textarea>
        <br> <br>
        <input type="text" name="listing[image]" placeholder="Enter image URL/Link">
        <br> <br>
        <input type="number" name="listing[price]" placeholder="Enter the price">
        <br> <br>
        <input type="text" name="listing[location]" placeholder="Enter the location">
        <br><br>
        <input type="text" name="listing[country]" placeholder="Enter the country">
        <br><br>
        <button>Add</button>
    </form>
</body>
